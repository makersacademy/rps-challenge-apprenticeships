<p>Ready to play, <%= @player_name %>? Choose your weapon!</p>

<form id="form" action="/result" method="get">
    <input type="radio" name="player_weapon" value="rock" id="rock">
    <label for="rock">rock</label>
    <input type="radio" name="player_weapon" value="paper" id="paper">
    <label for="paper">paper</label>
    <input type="radio" name="player_weapon" value="scissors" id="scissors">
    <label for="scissors">scissors</label>
  <p>
    <input type="submit" value="submit">
  </p>
</form>
