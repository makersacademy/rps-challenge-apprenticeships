<h1> Your move, <%= @player %> </h1>

<form action="/attack" method="post">
  <input type="radio" id="rock" name="attack" value="rock">
  <label for="rock">🎸</label><br>
  <input type="radio" id="paper" name="attack" value="paper">
  <label for="paper">🗒</label><br>
  <input type="radio" id="scissors" name="attack" value="scissors">
  <label for="scissors">✂️</label>
  <br>
  <button type="submit">Attack</button>
</form>


<%= @confirmation %>
