<style>
  .centered {

    /* Gets pos of middle of the screen, no matter the size or scroll. */
    position: absolute;

    /* Set Margain */
    top: 50%;
    left: 50%;

    /* This moves the objects */
    transform: translate(-50%, -50%);
    text-align: center;
  }
  .off_centered {

    /* Gets pos of middle of the screen, no matter the size or scroll. */
    position: absolute;

    /* Set Margain */
    top: 35%;
    left: 50%;

    /* This moves the objects */
    transform: translate(-50%, -50%);
    text-align: center;
  }
</style>
<body style="background-color:powderblue;">
<!-- Refresh every second -->
<meta http-equiv="refresh" content="2">

<div class="off_centered">
<%if @@game.player_1.nil? %>
  <h1> Waiting for player 1... </h1>
<%elsif @@game.player_2.nil? %>
  <h1> Waiting for player 2... </h1>
<%elsif !@@game.player_1.nil? && !@@game.player_2.nil?%>
  <% redirect '/play' %>
<%end%>
</div>
<div class="centered">
  <form action="/" >
    <input type="submit" value="Add Another" style="padding: 9px 11px; font-size:18px">
  </form>
</div>

</body>
