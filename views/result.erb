

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>RPS Play</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link href="<%= url('/styles.css') %>" type="text/css" rel="stylesheet">
</head>
<body>
  <div class="container mt-5 p-3">
    <h1 class="text-center"> <%= @game.play_game %> </h1>
  <div class="row m-3">
    <div class="col-md-4 position-relative">
      <img src="./images/rock-and-roll.png" class="img-thumbnail" alt="Rock">
    </div>
    <div class="col-md-4 position-relative">
      <img src="./images/send.png" class="img-thumbnail" alt="Paper">
    </div>
    <div class="col-md-4 position-relative">
      <img src="./images/scissors.png" class="img-thumbnail" alt="Scissors">
    </div>
  </div>
    
    <button class="btn-light btn-lg mx-auto"><a href="/play">Play Again</a></button>
    <button class="btn-light btn-lg mx-auto"><a href="/">Quit</a></button>

  </div>
  
</body>
</html>
