<% if $game.result == $game.player_one %>
<h1 style="font-family: helvetica"> <%= $game.player_one.name %> wins!</h1>
<% elsif $game.result == "CPU"%>
<h1 style="font-family: helvetica">Beaten by a robot! Get used to it.</h1>
<% elsif $game.result == "Draw"%>
<h1 style="font-family: helvetica">It's a tie!</h1>
<% else %>
<h1 style="font-family: helvetica">Something's gone wrong here...</h1>
<% end %>
<div id="end of game options">
  <form action="/play-again">
    <input type="submit" value="Play Again">
  </form>
  <form action="/">
    <input type="submit" value="Reset">
  </form>
</div>