
<h1> Rock, Paper or Scissors? </h1>
<%if !@choice%>
<form action='/singleplayer' method='post'>
<label for="choice">Choose an option:</label>
<select name="choice" id="choice">
  <option value="Rock">Rock</option>
  <option value="Paper">Paper</option>
  <option value="Scissors">Scissors</option>
</select>
<input type='submit' id = 'submit' value = 'Submit'>
</form>
<%else%>

<h1> You chose <%=@choice%> </h1>

<%choice_value_hash = {'Rock': 1, 'Paper': 2, 'Scissors': 3}%>
<%player_choice = choice_value_hash[@choice.to_sym]%>
<%cpu_choice = rand(1..3)%>

<h1> CPU chose <%=choice_value_hash.key(cpu_choice)%>, I promise </h1>
 
<%if (player_choice + 1) % 3 == cpu_choice %>
  <h1> CPU wins :( </h1>
<%elsif player_choice == cpu_choice %>
  <h1> It's a draw </h1>
<%else %>
  <h1> You win! </h1>
<%end %>


<%end%>

